{

  "manifest_version": 2,
  "name": "blockstuff",
  "version": "2.0",

  "applications": {
    "gecko": {
      "id": "blockstuff@example.com",
      "strict_min_version": "42.0"
    }
  },

  "description": "blocks a few websites",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  }

}
